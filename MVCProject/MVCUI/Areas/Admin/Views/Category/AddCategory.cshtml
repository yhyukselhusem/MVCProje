
@{ ViewBag.Title = "Index";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
                TempData["Title"] = "Kullanıcılar"; }

<div class="col-md-6">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Ekle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form">
            <div class="card-body">
                <div class="form-group">
                    <label>Kategori Adı</label>
                    <input type="text" class="form-control" placeholder="Kategori Girin">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" placeholder="Açıklama Girin">
                </div>
                <div class="form-group">
                    <label>Alt Kategori</label>
                    <input type="text" class="form-control" placeholder="Alt Kategori Girin">
                </div>


            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Ekle</button>
            </div>
        </form>
    </div>


</div>





