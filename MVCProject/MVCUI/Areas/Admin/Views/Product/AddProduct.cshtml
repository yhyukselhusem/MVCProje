
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Ürün Ekle";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ürün Bilgileri</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form">
            <div class="card-body">
                <div class="form-group">
                    <label>ÜRÜN ADI </label>
                    <input type="text" class="form-control" placeholder="ürün adı">
                </div>
                <div class="form-group">
                    <label>ÜRÜN FİYATI</label>
                    <input type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label>STOK ADET</label>
                    <input type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label>Ürün Görsel</label>
                    <input type="file" />
                </div>
                <div class="form-group">
                    <label>Kategori Seç</label>
                    <select class="form-control">
                        <option>option 1</option>
                        <option>option 2</option>
                        <option>option 3</option>
                        <option>option 4</option>
                        <option>option 5</option>
                    </select>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

